<!-- LANGUAGE SCRIPT -->
<script>
  const translations = {
    kinyarwanda: {
      homeText: "Murakaza neza kuri Murikimpano!"
    },
    english: {
      homeText: "Welcome to Murikimpano!"
    },
    french: {
      homeText: "Bienvenue sur Murikimpano !"
    },
    swahili: {
      homeText: "Karibu kwenye Murikimpano!"
    }
  };

  function switchLanguage() {
    const lang = document.getElementById("languageSwitcher").value;
    document.getElementById("homeText").innerText = translations[lang].homeText;
  }
</script>
