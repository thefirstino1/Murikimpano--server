  <div class="container">
    <h3 class="text-center mb-4">Wibagiwe Ijambo Banga?</h3>
    <form id="resetForm">
      <div class="form-group">
        <label>Shyiramo Email</label>
        <input type="email" class="form-control" id="email" required>
      </div>
      <button type="submit" class="btn btn-primary">Ohereza Link yo Guhindura</button>
      <p id="message" class="text-danger"></p>
    </form>
  </div>

  <!-- Firebase Reset Password Logic -->
  <script>
    const form = document.getElementById('resetForm');
    const message = document.getElementById('message');

    form.addEventListener('submit', function(e) {
      e.preventDefault();
      const email = document.getElementById('email').value;

      firebase.auth().sendPasswordResetEmail(email)
        .then(() => {
          message.style.color = "green";
          message.innerText = "Link yo guhindura ijambo banga yoherejwe kuri email yawe!";
        })
        .catch((error) => {
          message.style.color = "red";
          message.innerText = "Ikosa: " + error.message;
        });
    });
  </script>
