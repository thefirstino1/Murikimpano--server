  <!-- Firebase SDK -->
  <script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/10.12.0/firebase-app.js";
    import { getAuth, sendPasswordResetEmail } from "https://www.gstatic.com/firebasejs/10.12.0/firebase-auth.js";

    const firebaseConfig = {
      apiKey: "AIzaSyBC-bxI0yfqnlp2TyDAYZH0vEYcQH_tDf0",
      authDomain: "murikimpano.firebaseapp.com",
      projectId: "murikimpano",
      storageBucket: "murikimpano.firebasestorage.app",
      messagingSenderId: "288360394906",
      appId: "1:288360394906:web:036db545a633f8eba5af23",
      measurementId: "G-08Q2CKEE87"
    };

    const app = initializeApp(firebaseConfig);
    const auth = getAuth();

    window.resetPassword = async function () {
      const email = document.getElementById("email").value.trim();
      const msgBox = document.getElementById("message");

      if (!email) {
        msgBox.innerText = "Shyiramo email neza!";
        msgBox.className = "text-red-500 font-bold mb-4 text-center";
        return;
      }

      try {
        await sendPasswordResetEmail(auth, email);
        msgBox.innerText = "Twakohereje link kuri email yawe. Reba kuri inbox.";
        msgBox.className = "text-green-400 font-bold mb-4 text-center";
      } catch (error) {
        msgBox.innerText = "Ikosa: " + error.message;
        msgBox.className = "text-red-500 font-bold mb-4 text-center";
      }
    };
  </script>

